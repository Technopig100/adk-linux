#!/bin/bash
echo "#################################"
echo "Start frost-before"
echo "#################################"

echo "Populate Core Team keys"
echo "#################################"
pacman-key --init
pacman-key --populate archlinux
pacman-key --populate frost


echo "Changing into our own linux.preset"
echo "#################################"
mv /etc/mkinitcpio.d/frost /etc/mkinitcpio.d/linux.preset

echo "#################################"
echo "End frost-before"
echo "#################################"
rm /usr/local/bin/frost-before
